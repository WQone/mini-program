.answer_list {
  height: 80rpx;
  background: white;
  width: 90%;
  margin-bottom: 10rpx;
  line-height: 80rpx;
  /* margin: auto; *//* padding: 10rpx; */
}

.bg_down {
  background: white;
  position: absolute;
  top: 100px;
  z-index: 2;
  width: 100%;
}

.star_top {
  width: 96%;
  margin: auto;
  height: 220rpx;
  background: red;
  position: relative;
  top: 30px;
  z-index: 2;
  left: 0;
  border-radius: 8rpx;
  box-shadow: rgba(0, 0, 0, 0.2) 0 0 10rpx;
}

.star_bottom {
  width: 96%;
  margin: auto;
  height: 800rpx;
  background: green;
  position: relative;
  top: 40px;
  z-index: 2;
  left: 0;
  box-shadow: rgba(0, 0, 0, 0.2) 0 0 10rpx;
}

.data_nav {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1rpx solid #ccc;
}

.data_nav_li {
  padding: 20rpx 10rpx;
}

.nav_active{
  border-bottom: 1rpx solid red;
  margin-bottom: -1rpx;
