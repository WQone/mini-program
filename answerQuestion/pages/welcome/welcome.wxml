<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
  <view class="userChoose" bindtap="toInfoPage">
   
      <image src="../../img/index-choose.jpg"  class='userChoose_img' mode='aspectFit'>
      </image>
      <view  class="userChoose_text">
      <text  class="userChoose_text_title">你懂我吗？</text> 
      <text class="userChoose_text_content">一个只有真正懂你的人,才能玩儿过的互动</text> 
      </view>
        
  </view>

</view>