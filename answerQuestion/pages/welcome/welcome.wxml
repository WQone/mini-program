<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <open-data type="userAvatarUrl" class="userinfo-avatar"></open-data>
    <open-data type="userNickName" lang="zh_CN" class="userinfo-nickname"></open-data>
  </view>

<navigator url="/pages/drawImage/drawImage" hover-class="navigator-hover" class="userChoose">
    <image src="../../img/绘画.png" class='userChoose_img' mode='aspectFit' style="background:white;">
    </image>
    <view class="userChoose_text">
      <text class="userChoose_text_title">涂鸦</text>
      <text class="userChoose_text_content">开始创作属于自己的作品吧~</text>
    </view>
  </navigator>

  <view class="userChoose" bindtap="toInfoPage">
    <image src="../../img/index-choose.jpg" class='userChoose_img' mode='aspectFit'>
    </image>
    <view class="userChoose_text">
      <text class="userChoose_text_title">你懂我吗？</text>
      <text class="userChoose_text_content">一个只有真正懂你的人,才能玩儿过的互动</text>
    </view>
  </view>
  <view class="userChoose" bindtap='giveMoney'>
    <image src="../../img/打赏记录.png" class='userChoose_img' mode='aspectFit' style="background:white;">
    </image>
    <view class="userChoose_text">
      <text class="userChoose_text_title">打赏作者</text>
      <text class="userChoose_text_content">给作者一点支持吧~</text>
    </view>
  </view>
  <button open-type="share">
  <view  class="userShare">
    <image src="../../img/分享.png" mode="scaleToFill" bindtap='shareM'></image>
  </view>
  </button>

</view>